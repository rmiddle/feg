<!DOCTYPE plugin SYSTEM "../../libs/devblocks/plugin.dtd">
<plugin>
	<id>feg.webapi</id>
	<name>[Feg] Web Services API</name>
	<description>A RESTful XML/JSON interface for integrating Feg with other applications and tools.</description>
	<author>Answernet</author>
	<revision>0</revision>
	<link>http://feg.answernet.com</link>

	<!-- Exported Classes -->
	
	<class_loader>
		<!--
		<file path="api/Plugin.php">
			<class name="ChRestPlugin" />
		</file>
		-->
	</class_loader>

	<!-- Extensions -->
	
	<extensions>
		<!-- Translations -->
		
		<extension point="devblocks.i18n.strings">
			<id>webapi.translations</id>
			<name>Web API Strings</name>
			<class>
				<file>api/Plugin.php</file>
				<name>FegWebApiTranslations</name>
			</class>
			<params>
			</params>
		</extension>

		<!-- Controllers -->
	
		<extension point="devblocks.controller">
			<id>feg.controller.rest</id>
			<name>REST Controller</name>
			<class>
				<file>api/App.php</file>
				<name>FegRestFrontController</name>
			</class>
			<params>
				<param key="uri" value="webapi" />
			</params>
		</extension>
		
	</extensions>
</plugin>